---
import { Picture } from "astro:assets";
import heroImage from "assets/Open source.gif";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Empower Your Business with Smarter ERP Solutions
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Streamline operations, unlock insights, and drive growth with our cutting-edge softwares 
      Designed for modern businesses,<wbr /> our platform integrates all your processes into one seamless 
      systemâ€”so you can focus on what truly matters: scaling smarter and faster.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href=""
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

         Get a Free Proposal
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/contact"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:phone-call" />
         Submit a Contact Request
      </Link>
    </div>
  </div>
</main>
